<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:padding="10dp"
        tools:context=".VisitiorInfoActivity">

    <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:civ_border_color="#FF000000"
            android:layout_width="150dp"
            android:id="@+id/imageview2_id"
            android:layout_gravity="center_horizontal"
            android:layout_height="150dp"/>



    <ScrollView android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:layout_height="310dp">

        <TableLayout android:layout_width="match_parent"
                     android:layout_height="match_parent">


            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:paddingBottom="10dp">
                <TextView
                        android:text="Name Of Person"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2"/>
                <TextView
                        android:text="TextView"
                        android:textSize="18sp"
                        android:textColor="#1E1E1E"
                        android:paddingLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_nop"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:paddingBottom="10dp">
                <TextView
                        android:text="Email"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4"/>
                <TextView
                        android:text="TextView"
                        android:textSize="18sp"
                        android:textColor="#1E1E1E"
                        android:layout_width="0dp"
                        android:paddingLeft="10dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_email"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:paddingBottom="10dp">
                <TextView
                        android:text="Meet"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"/>
                <TextView
                        android:text="TextView"
                        android:textSize="18sp"
                        android:textColor="#1E1E1E"
                        android:layout_width="0dp"
                        android:paddingLeft="10dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_meet"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:paddingBottom="10dp">
                <TextView
                        android:text="Whom To Meet"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView8"/>
                <TextView
                        android:text="TextView"
                        android:textSize="18sp"
                        android:textColor="#1E1E1E"
                        android:layout_width="0dp"
                        android:paddingLeft="10dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_wtm"/>
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:paddingBottom="10dp">

                <TextView
                        android:text="In Date Time"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView11"/>

                <TextView
                        android:text="TextView"
                        android:textSize="18sp"
                        android:textColor="#1E1E1E"
                        android:layout_width="0dp"
                        android:paddingLeft="10dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_idt"/>


            </TableRow>


            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:paddingBottom="10dp">

                <TextView
                        android:text="Out Date Time"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView13"/>


                <TextView
                        android:text="TextView"
                        android:textSize="18sp"
                        android:textColor="#1E1E1E"
                        android:layout_width="0dp"
                        android:paddingLeft="10dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_odt"/>

            </TableRow>




            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:paddingBottom="10dp">
                <TextView
                        android:text="Govt ID Type"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"/>
                <TextView
                        android:text="TextView"
                        android:textSize="18sp"
                        android:textColor="#1E1E1E"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:paddingLeft="10dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_git"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:paddingBottom="10dp">
                <TextView
                        android:text="Govt ID"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView12"/>
                <TextView
                        android:text="TextView"
                        android:textSize="18sp"
                        android:textColor="#1E1E1E"
                        android:layout_width="0dp"
                        android:paddingLeft="10dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_gid"/>
            </TableRow>
            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="Status"
                        android:textSize="20sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView14"/>
                <TextView
                        android:text="TextView"
                        android:textSize="18sp"
                        android:textColor="#1E1E1E"
                        android:layout_width="0dp"
                        android:paddingLeft="10dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_status"/>
            </TableRow>
        </TableLayout>

    </ScrollView>

    <LinearLayout
            android:layout_width="match_parent"
            android:padding="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">

        <Button
                android:layout_width="110dp"
                android:id="@+id/button_approve"
                android:padding="5dp"
                android:text="Approve"
                android:textSize="20dp"
                android:background="#2A991C"
                android:textColor="#fff"
                android:layout_height="wrap_content"/>

        <Button
                android:layout_width="110dp"
                android:id="@+id/button_reject"
                android:text="Reject"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"
                android:padding="5dp"
                android:background="#9C1206"
                android:textColor="#fff"
                android:layout_height="wrap_content"/>

    </LinearLayout>




</LinearLayout>